/* pages/attractions/attractions.wxss */
.attraction-body {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center
}

.attraction-card {
  width: 80%;
  margin-top: 60rpx;
  border: 1px #888888 solid;
  border-radius: 30rpx;
  box-shadow: 15rpx 30rpx 20rpx #888888;
  background-color: rgba(0, 0, 0, 0.824);
}

.attraction-img {
  display: flex;
  width: 96%;
  margin-left: 2%;
  margin-top: 20rpx;
}

.attraction-image {
  border-radius: 30rpx;
}

.attraction-info {
  width: 96%;
  margin-left: 2%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  opacity:0.8;
  color: white;
}

.attraction-name {
  font-size: x-large;
}

.attraction-content {
  margin-top: 20rpx;
  font-size: x-small;
}